                        onTabShow: function(tab, navigation, index)
                        {
                            if(index==1)
                            {
                                if($(".widget-body").find("button.buttonSave").css("display")!="none"){
                                    disableNavigator();
                                }
                            }

                            var $total = navigation.find('li:not(.status)').length;
                            var $current = index+1;
