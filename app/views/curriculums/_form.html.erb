        { id:1, pId:0, name:"<%= t('material.title_material')%>",open:true,icon:"<%= asset_path "template/ztree/img/diy/1_open.png" %>", iconOpen:"<%= asset_path "template/ztree/img/diy/1_open.png" %>", iconClose:"<%= asset_path "template/ztree/img/diy/1_open.png"%>"},
        <% if @curriculum %>
