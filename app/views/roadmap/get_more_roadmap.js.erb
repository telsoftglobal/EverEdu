$('#roadmaps-list').prepend('<div class="roadmap-id" data-id="<%= @user_category.id %>" id="roadmap-id<%= @user_category.id %>"><div>')
$('#roadmap-id<%= @user_category.id %>').append('<%= escape_javascript(render :partial => 'roadmap/user_category', locals: {user_category: @user_category}) %>')
$('#load-more-error').html('')

var total_roadmaps = '<%= @total_roadmaps %>'
var roadmaps_length = $('.roadmap-id').length
if (roadmaps_length >= total_roadmaps) {
    $('#load-more').hide()
} else {
    $('#load-more').show()
}